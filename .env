# ✅ Secure JWT Secret (Use a strong and private key)
JWT_SECRET=your-secure-jwt-secret
JWT_REFRESH_SECRET=your-secure-refresh-token-secret

# ✅ Token Expiration Times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ✅ PostgreSQL Database Configuration
DB_USER=swiftypay_user
DB_HOST=localhost
DB_NAME=swiftypay
DB_PASS=your-secure-db-password
DB_PORT=5432

# ✅ SMTP Configuration (For Email Sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=swiftypay@gmail.com
SMTP_PASS=your-secure-smtp-password

# ✅ CORS Configuration (If needed)
CORS_ORIGIN=http://localhost:3000

# ✅ Application Configuration
PORT=5000
NODE_ENV=development

# ✅ Logging Configuration
LOG_LEVEL=info

# ✅ Security Configuration (Hashing rounds for passwords)
BCRYPT_SALT_ROUNDS=10

# ✅ Rate Limiting (For API security against brute-force attacks)
RATE_LIMIT_WINDOW=15  # Time window in minutes
RATE_LIMIT_MAX=100    # Max requests per window per IP

# ✅ File Upload Limits (If your app supports file uploads)
MAX_UPLOAD_SIZE=5MB

# ✅ Enable Debug Mode (Useful for development, disable in production)
DEBUG=true

# ✅ Redis Configuration (If caching is needed)
REDIS_HOST=localhost
REDIS_PORT=6379

# ✅ API Rate Limiting (Enhance security against API abuse)
API_RATE_LIMIT=1000 # Maximum API requests per hour per user

# ✅ WebSocket Configuration (If using real-time features)
WEBSOCKET_PORT=6001

# ✅ Payment Gateway Keys (If integrating payments)
PAYMENT_GATEWAY_PUBLIC_KEY=your-public-key
PAYMENT_GATEWAY_SECRET_KEY=your-secret-key